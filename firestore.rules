
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to submit an email to the 'interest' collection.
    // This rule is secure because it does NOT allow anyone to read, update,
    // or delete the documents in the collection. They can only create new ones.
    match /interest/{docId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
